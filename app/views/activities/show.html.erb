<div class='container-index mb-10 p-3 '>
  <div class="card-activity-show">
    <img src="https://source.unsplash.com/1600x900/?<%= @activity.sport.name %>" />


    <div class="card-activity-show-infos border-bottom">
      <div>
        <h2 class='mb-2'><%= @activity.title %></h2>
        <p class='mb-1' style= "width: max-content"><%= 'ðŸ—“'  %> <%= @activity.start_time.strftime("%A, %B %-d, %H:%M -") %> <%= @activity.end_time.strftime("%H:%M")%> </p>
        <p class='mb-1' style= "width: max-content"><%= 'ðŸ“' %><%= @activity.location %></p>
        <p class='mb-2'><%= @activity.description %></p>
      </div>
      <a class="card-activity-show-btn btn btn-sport" href="#"><%= @activity.sport.name %></a>
      <div class="card-activity-show-frame">
        <div class="card-activity-show-players">
          <p> <strong>Limit: </strong> </p>
          <p> <strong> <%= @activity.players.count %>  </strong> playing</p>
          <p>  <strong> <%= @activity.player_limit - @activity.players.count %> </strong>  needed </p>
        </div>
        <div class="card-activity-show-skill">
          <p> <strong> Skill Level: </strong> </p>
          <p> <%= @activity.skill_level%></p>
        </div>
      </div>


      <% if @activity.is_owner?(current_user) %>
      <%= link_to "Cancel", root_path, class: "btn btn-primary"%>
      <%= link_to "Invite", root_path, class: "btn btn-primary"%>
      <%= link_to "Edit", root_path, class: "btn btn-primary"%>

      <% elsif @activity.is_player?(current_user) %>
      <%= link_to "Leave", root_path, class: "btn btn-primary"%>

      <% else %>
      <%= link_to "Join", root_path, class: "btn btn-primary"%>

      <% end %>

    </div>
  </div>
</div>


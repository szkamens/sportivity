<div class='container-index mb-10 p-3 '>
  <div class="card-activity-show">
    <%= image_tag "#{@activity.sport.name.downcase}.jpg", class: 'card-activity-image' %>


    <div class="card-activity-show-infos border-bottom">
      <div>
        <h2 class='show-title'><%= @activity.title %></h2>
        <p class='show-paragraph' style= "width: max-content"><%= '🗓'  %> <%= @activity.start_time.strftime("%A, %B %-d, %H:%M -") %> <%= @activity.end_time.strftime("%H:%M")%> </p>
        <p class='show-paragraph' style= "width: max-content"><%= '📍' %><%= @activity.location %></p>
        <p class='show-paragraph'><%= @activity.description %></p>
      </div>
      <a class="card-activity-show-btn btn btn-sport" href="#"><%= @activity.sport.name %></a>

      <div class="card-activity-show-frame">
        <div class="card-activity-show-players">
          <p> <strong>Limit: </strong> </p>
          <p> <strong> <%= @activity.players.count %>  </strong> playing</p>
          <p>  <strong> <%= @activity.player_limit - @activity.players.count %> </strong>  needed </p>
        </div>
        <div class="divider-vertical"></div>
        <div class="card-activity-show-skill">
          <p> <strong> Skill Level: </strong> </p>
          <p> <%= @activity.skill_level%></p>
        </div>
      </div>


      <% if @activity.is_owner?(current_user) %>
      <div class= "show-btn-action">
      <%= link_to "Delete", activity_path(@activity), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn-action"%>
      <%= link_to "Invite", root_path, class: "btn-action"%>
      <%= link_to "Edit",  edit_activity_path(@activity), class: "btn-action"%>
      </div>
      <% elsif @activity.is_player?(current_user) %>
      <%= link_to "Leave", root_path, class: "btn-action"%>

      <% else %>
      <%= link_to "Join", root_path, class: "btn-action"%>

      <% end %>

    </div>
  </div>
</div>


<div class="container">
  <br>
  <form>
    <div class="form-group">
      <label for="activityDetails">Activity's Name</label>
      <input type="name" class="form-control" id="activityDetails" placeholder="My Activity">
    </div>
    <div class="form-group">
      <label for="activityDetails">Where are you playing?</label>
      <input type="text" class="form-control" placeholder="Location">
    </div>
    <div class="form-group">
      <label for="activityDetails">Select your sport</label>
      <select class="form-control" id="sportList">
        <option>Soccer</option>
        <option>Tennis</option>
        <option>Running</option>
        <option>Basketball</option>
        <option>Volleyball</option>
        <option>Yoga</option>
      </select>
    </div>
    <div class="form-group">
      <label for="rangePlayer">Player limit</label>
      <br>
      <input type="range" name="playerInputName" id="playerInputId" value="10" min="1" max="20" oninput="playerOutputId.value = playerInputId.value">
      <output name="playerOutputName" id="playerOutputId">10</output>
    </div>
    <div class="level">
      <label for="activityDetails">Level requirements</label>
      <br>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
        <label class="form-check-label" for="inlineCheckbox1">Any</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
        <label class="form-check-label" for="inlineCheckbox2">Beginner</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
        <label class="form-check-label" for="inlineCheckbox2">Intermediate</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" id="inlineCheckbox2" value="option2">
        <label class="form-check-label" for="inlineCheckbox2">Pro</label>
      </div>
    </div>
    <br>
    <div class="form-group">
      <label for="activityDetails">Description</label>
      <textarea class="form-control" id="activityDetailsDescription" rows="1"></textarea>
    </div>
  </form>
  <div class="btn btn-primary">
    <%= link_to 'Done', root_path, :class => "btn-done" %>
  </div>
</div>
